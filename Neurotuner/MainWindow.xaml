<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neurotuner"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Neurotuner.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="959">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Margin="0,10,0,207" HorizontalAlignment="Left" Width="591">
            <TabItem x:Name="Range1" Header="Range">
                <Grid x:Name="Range" Background="#FFE5E5E5" HorizontalAlignment="Left" Width="561">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem x:Name="Settings" Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="cmbInput" HorizontalAlignment="Left" Margin="89,10,0,0" VerticalAlignment="Top" Width="230"/>
                    <Label x:Name="lbMicrophone" Content="Microphone" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cmbOutput" HorizontalAlignment="Left" Margin="89,46,0,0" VerticalAlignment="Top" Width="230"/>
                    <Label x:Name="lbSpeaker" Content="Speaker" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cmbSampFreq" HorizontalAlignment="Left" Margin="449,10,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="44100"/>
                        <ComboBoxItem Content="48000"/>
                    </ComboBox>
                    <Label x:Name="lbSampFreq" Content="Sampling frequency" HorizontalAlignment="Left" Margin="329,8,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
        <ComboBox x:Name="cmbSelEff" HorizontalAlignment="Left" Margin="738,10,0,0" VerticalAlignment="Top" Width="160">
            <ComboBoxItem Content="Reverb"/>
            <ComboBoxItem Content="PitchEffects"/>
            <ComboBoxItem Content="PitchEffects/Reverb"/>
        </ComboBox>
        <Label x:Name="lbSelEff" Content="Selecting Effects" HorizontalAlignment="Left" Margin="631,8,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="trackPitch" HorizontalAlignment="Left" Margin="669,49,0,0" VerticalAlignment="Top" Width="280" Minimum="-15" Maximum="15" TickPlacement="BottomRight"/>
        <Label x:Name="lbPitch" Content="Pitch" HorizontalAlignment="Left" Margin="628,39,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
